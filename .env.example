# API Keys for Content Generation
# Copy this file to .env and fill in your API keys

# Anthropic Claude API (for content synthesis)
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Exa API (for finding authoritative sources)
# Get your API key at: https://exa.ai/
EXA_API_KEY=your_exa_api_key_here

# Firecrawl API (for clean content extraction)
# Get your API key at: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Optional: Set to 'production' in production environment
NODE_ENV=development
